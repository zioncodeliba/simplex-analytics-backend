echo ""

echo "ğŸ“ Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed. Please fix TypeScript errors before pushing."
  exit 1
fi

echo "âœ¨ Linting..."
npm run lint:strict
if [ $? -ne 0 ]; then
  echo "âŒ Lint check failed. Please fix linting errors before pushing."
  exit 1
fi

echo "ğŸ’… Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting check failed. Run 'npm run format' to fix."
  exit 1
